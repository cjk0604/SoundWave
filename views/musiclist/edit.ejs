<% include ../partials/header %>
<div class="container">
    <div class="row">
          <% musiclist.forEach(function(musiclist){ %>
        <h1 style="text-align: center">Edit <%= musiclist.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/musiclist/<%= musiclist.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="musiclist[name]" value="<%= musiclist.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="musiclist[image]" value="<%= musiclist.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="musiclist[description]" value="<%= musiclist.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="musiclist[price]" value="<%= musiclist.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/musiclist">Go Back</a>
        </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
