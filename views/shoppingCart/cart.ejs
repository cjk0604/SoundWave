<% include ../partials/header %>

<div class="content">
    <div class="container-fluid">

      <!-- navigate to order record after submission -->
    <form action="/dashboard/order/<%= currentUser %>?_method=PUT" method="POST">
      <!-- Extract all user info from db -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Shopping Cart</h4>
                        <p class="category">Please confirm your payment</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Username</th>
                              <th>Album ID</th>
                              <th>Album Title</th>
                              <th>Price</th>

                            </thead>
                            <tbody>
                              <% shoppingCart.forEach(function(cart){ %>
                                <tr>
                                  <input type="hidden" name="username" value="<%= cart.username %>">
                                  <td><%= cart.username %></td>

                                  <input type="hidden" name="album_id" value="<%= cart.album_id %>">
                                  <td><%= cart.album_id %></td>

                                  <input type="hidden" name="album_title" value="<%= cart.album_title %>">
                                  <td><%= cart.album_title %></td>

                                  <input type="hidden" name="album_price" value="<%= cart.album_price %>">
                                  <td><%= cart.album_price %></td>

                                </tr>
                              <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right">Confirm Payment</button>
            </div>



        </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>
